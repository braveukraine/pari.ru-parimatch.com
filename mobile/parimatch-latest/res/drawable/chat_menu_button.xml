<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item android:top="1.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/salesforce_brand_secondary" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_hovered="true">
        <layer-list>
            <item android:top="1.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/salesforce_brand_secondary" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="1.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/salesforce_brand_secondary" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:top="1.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/salesforce_contrast_inverted" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>