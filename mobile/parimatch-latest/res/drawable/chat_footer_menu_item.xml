<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/salesforce_brand_secondary" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/salesforce_brand_secondary" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/salesforce_brand_secondary" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:top="1.0dip" android:bottom="-2.0dip">
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dip" android:color="@color/salesforce_contrast_tertiary" />
                    <solid android:color="#00000000" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>